<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/banner"
        android:scaleType="fitXY"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/b612_bold"
        android:text="LOG IN"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:textColor="@color/black"
        android:letterSpacing="0.095"
        android:textSize="32sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/b612_regular"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="@string/login_instruction"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:text="Email:"
        android:fontFamily="@font/b612_regular"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:layout_gravity="center_horizontal"
        android:layout_width="278dp"
        android:hint="Email Address"
        android:padding="5dp"
        android:background="@drawable/rounded_edtext_states"
        android:fontFamily="@font/b612_regular"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Password"
        android:fontFamily="@font/b612_regular"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edtext_states"
        android:layout_gravity="center_horizontal"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="5dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keep me Login"
        android:fontFamily="@font/b612_regular"
        android:layout_marginLeft="70dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:backgroundTint="@color/active_outline"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background"/>
</androidx.appcompat.widget.LinearLayoutCompat>